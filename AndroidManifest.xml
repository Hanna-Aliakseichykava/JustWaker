<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.light.justwaker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="25" />
        
        <uses-permission android:name="android.permission.WAKE_LOCK"/>
        <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name="AlarmsListActivity"
             android:label="@string/title_activity_main">
             <intent-filter>
                 <action android:name="android.intent.action.MAIN"/>
                 <category android:name="android.intent.category.LAUNCHER"/>
             </intent-filter>
       </activity>

       <activity android:name="AddAlarmActivity"
             android:label="@string/title_activity_add_alarm">
       </activity>

       <activity android:name="EditAlarmActivity"
            android:label="@string/edit_alarm_title">
        </activity>

       <receiver android:name=".listeners.AlarmManagerBroadcastReceiver">
       </receiver>
       
       <activity android:name="CalendarActivity">
        </activity>

        <activity android:name="AboutActivity"
            android:label="@string/about_title">
        </activity>

        <activity android:name="WakeUpActivity">
        </activity>


        <service
          android:name=".services.TextToSpeechService"
          android:exported="false"/>

        <receiver android:name=".services.RebootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
