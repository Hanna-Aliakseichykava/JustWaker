<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.light.justwaker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />
        
        <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name="org.light.justwaker.AlarmsListActivity"
             android:label="@string/title_activity_main">
             <intent-filter>
                 <action android:name="android.intent.action.MAIN"/>
                 <category android:name="android.intent.category.LAUNCHER"/>
             </intent-filter>
       </activity>

       <activity android:name="org.light.justwaker.AlarmManagerActivity"
             android:label="@string/title_activity_alarm_manager">
       </activity>

       <activity android:name="org.light.justwaker.EditAlarmActivity"
            android:label="@string/edit_alarm_title">
        </activity>

       <receiver android:name="org.light.justwaker.listeners.AlarmManagerBroadcastReceiver">
       </receiver>
       
       <activity android:name="org.light.justwaker.CalendarActivity">
        </activity>

        <activity android:name="org.light.justwaker.AboutActivity"
            android:label="@string/about_title">
        </activity>

        <activity android:name="org.light.justwaker.WakeUpActivity">
        </activity>


        <service
          android:name=".services.TextToSpeechService"
          android:exported="false"/>

    </application>

</manifest>
