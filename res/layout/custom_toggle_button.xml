<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
android:gravity="center"
android:background="@null">

<ToggleButton
    android:id="@+id/customToggableButton"

    android:layout_width="wrap_content"
    android:layout_height="@dimen/toggle_btn_size"

    android:paddingLeft="@dimen/small_space"
    android:paddingRight="@dimen/small_space"

    android:layout_marginTop="@dimen/activity_medium_margin"
    android:layout_marginBottom="@dimen/activity_medium_margin"

    android:background="@null"
    android:textColor="@drawable/toggle_text"

    android:textStyle="bold"
    android:textSize="@dimen/text_size_days_large"
    />

</LinearLayout>