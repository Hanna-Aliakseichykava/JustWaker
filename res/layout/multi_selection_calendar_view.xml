<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingLeft="@dimen/extra_small_space"
   android:paddingRight="@dimen/extra_small_space"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:transitionGroup="true">

   <Button
       android:id="@+id/btBack"
       android:onClick="onCloseCalendar"
       android:padding="@dimen/padding_medium"
       android:text="@string/btSaveAndBack"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/redirect_button"/>

   <com.squareup.timessquare.CalendarPickerView
    android:id="@+id/calendar_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_extra_big_vertical_margin"/>

</RelativeLayout>