<?xml version="1.0" encoding="utf-8"?>
 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

   <LinearLayout
        android:layout_width="@dimen/list_item_size"
        android:minWidth="@dimen/list_item_size"
        android:maxWidth="@dimen/list_item_size"
        android:layout_height="@dimen/list_item_size">

        <Button android:id="@+id/btn_edit"
            android:background="@drawable/edit"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/small_space"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_list_btn">
        </Button>

    </LinearLayout>
   

    <TextView android:id="@+id/tv_string_data"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="Sample Data"
              android:textSize="@dimen/text_size_list"
              android:paddingLeft="@dimen/extra_small_space"
              android:paddingRight="@dimen/extra_small_space"/>

    <LinearLayout
        android:layout_width="@dimen/list_item_size"
        android:minWidth="@dimen/list_item_size"
        android:maxWidth="@dimen/list_item_size"
        android:layout_height="@dimen/list_item_size">
            <Button android:id="@+id/btn_cancel"
            android:background="@drawable/delete"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/small_space"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_list_btn">
            </Button>
    </LinearLayout>
 
</LinearLayout>